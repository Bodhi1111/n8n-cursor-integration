PROCESSED_FOLDER_PATH=/files/transcripts/processed
ARCHIVE_FOLDER_PATH=/files/transcripts/archive

# Host System Paths (for reference only)
# HOST_TRANSCRIPT_PATH="/Users/joshuavaughan/Documents/McAdams Transcripts"
