# BMad Method Configuration
BMAD_ANALYST_ENABLED=true
BMAD_CORE_PATH=./node_modules/bmad-method/bmad-core

# Social Media Configuration
SOCIAL_CONTENT_ENABLED=true
LINKEDIN_AUTO_POST=false
TWITTER_AUTO_POST=false

# Workflow Configuration
AUTO_ARCHIVE_FILES=true
SEND_EMAIL_NOTIFICATIONS=true
LOG_LEVEL=info

# Security
ENCRYPTION_KEY=your_encryption_key_here
API_WEBHOOK_SECRET=your_webhook_secret_here